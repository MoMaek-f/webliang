<view>
	<van-card 
		tag="{{task_info.task_type}}"
		price='{{task_info.task_price}}'
		desc="{{ task_info.task_description }}"
		title="{{ task_info.task_title }}" 
		thumb="{{ task_info.task_img_url }}" 
		>
  </van-card>
  <van-cell-group>
  <van-field
    model:value="{{task_info.task_detail}}"
    type="textarea"
    label="详情"
    clearable
    readonly="true"
    autosize
  />
  <van-field
    model:value="{{task_info.task_status != 0 ? userInfo.gender == 1 ? '进行中' : '已完成' : '待接受'}}"
    type="textarea"
    label="任务状态"
    clearable
    readonly="true"
    autosize
  />
</van-cell-group>
<van-cell-group title="接受者联系方式">
  <van-field
    model:value="{{ task_contact_qq }}"
    clearable
    label="QQ"
    readonly
    bind:click-icon="onClickIcon"
  />
  <van-field
  model:value="{{ task_contact_wechat }}"
    clearable
    label="微信"
    readonly
    bind:click-icon="onClickIcon"
  />
  <van-field
  model:value="{{ task_contact_tel }}"
    clearable
    label="手机号"
    readonly
    bind:click-icon="onClickIcon"
  />
</van-cell-group>
</view>