<view wx:for="{{published_data}}" wx:key="index">
	<van-card 
		tag="{{item.task_type}}"
		price='{{item.task_price}}'
		desc="{{ item.task_description }}"
		title="{{ item.task_title }}" 
		thumb="{{ item.task_img_url }}" 
		>
		<view slot="footer">
			<van-button 
				size="mini"
				catchtap="showShareAction"
				style="margin-right: 15rpx;" >分享</van-button>
			<van-button 
				size="mini"
				type="info"
				style="margin-right: 15rpx;"
				data-task_id= "{{item._id}}"
				catchtap="detail">详情</van-button>
			<van-button 
				size="mini"
				type="primary"
				data-task_id= "{{item._id}}"
				catchtap="accept">接受</van-button>
		</view>
	</van-card>
</view>

<!-- 日期选择 -->
<van-calendar show="{{ show }}" bind:close="onClose_select_date" bind:confirm="onConfirm_select_date" />

<!-- 新发布 -->
<view
		style="position:fixed; bottom:50rpx; right: 20px; border-radius: 50%; width:50px; height: 50px; background-color: #FFFFFF;"
		bindtap="new_publish">
		<van-icon name="plus" color="green" size="50px" style="position:fixed; bottom:50rpx; right: 20px;" />
	</view>



<!-- 弹窗 -->
<van-dialog id="van-dialog" />
<!-- 分享 -->
<van-share-sheet 
	show="{{ showShare }}"
	title="立即分享给好友"
	options="{{ options }}"
	bind:cancel="closeShareAction"
	bind:click-overlay="closeShareAction" 
/>
