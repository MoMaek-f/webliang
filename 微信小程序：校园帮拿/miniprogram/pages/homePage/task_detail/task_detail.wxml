<!--miniprogram/pages/homePage/task_detail/task_detail.wxml-->
<view>
	<van-card 
		tag="{{task_info.task_type}}"
		price='{{task_info.task_price}}'
		desc="{{ task_info.task_description }}"
		title="{{ task_info.task_title }}" 
		thumb="{{ task_info.task_img_url }}" 
    >
    <view slot="footer">
			<van-button 
				size="mini"
				type="primary"
        data-task_id= "{{task_info._id}}"
        data-task_publisher= "{{task_info.task_publisher}}"
				catchtap="accept">确认接受</van-button>
		</view>
  </van-card>


  <van-cell-group>
  <van-field
    model:value="{{task_info.task_detail}}"
    type="textarea"
    label="详情"
    clearable
    placeholder="任务详情描述"
    readonly="true"
    autosize
  />
</van-cell-group>
<van-cell-group title="发布者联系方式">
  <van-field
    value="{{ task_info.task_contact_qq }}"
    clearable
    label="QQ"
    readonly
    bind:click-icon="onClickIcon"
  />
  <van-field
    value="{{task_info.task_contact_wechat }}"
    clearable
    label="微信"
    readonly
    bind:click-icon="onClickIcon"
  />
  <van-field
    value="{{ task_info.task_contact_tel }}"
    clearable
    label="手机号"
    readonly
    bind:click-icon="onClickIcon"
  />
</van-cell-group>
<van-cell-group title="至少填写一种联系方式">
  <van-field
    model:value="{{ task_accepter_contact_qq }}"
    clearable
    label="QQ"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
  />
  <van-field
  model:value="{{task_accepter_contact_wechat }}"
    clearable
    label="微信"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
  />
  <van-field
  model:value="{{ task_accepter_contact_tel }}"
    clearable
    label="手机号"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
  />
</van-cell-group>
</view>
<!-- 弹窗 -->
<van-dialog id="van-dialog" />